<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:typeface">monospace</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="fontFamily">@font/roboto_light
        </item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->

        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:editTextStyle">@style/MyEditViewStyle</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:typeface">monospace</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="fontFamily">@font/roboto_light
        </item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->

    </style>

    <style name="Cookster">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="Settings_element">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/borderd_bottom_element</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">@font/roboto_light</item>

    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">16dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="MyEditViewStyle" parent="android:Widget.EditText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="MyButtonStyle" parent="android:Widget.Button">
        <item name="android:textColor">#888</item>
        <item name="android:textSize">17dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
</resources>
